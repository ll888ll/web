[flake8]
# Configuración de Flake8 para Croody

# Límites de caracteres
max-line-length = 88
max-complexity = 10

# Excluir archivos
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    .eggs,
    *.egg,
    build,
    dist,
    .tox,
    migrations,
    .pytest_cache,
    node_modules,
    staticfiles,
    logs

# Ignorar errores específicos
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by isort)
    F403,  # 'from module import *' used; unable to detect undefined names

# Count errores y warnings
count = True

# Mostrar source code para cada error
show-source = True

# Mostrar estadística por error
statistics = True

# Formato de salida
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s
